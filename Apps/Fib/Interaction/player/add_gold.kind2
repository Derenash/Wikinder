#kdl_name = Fib_itr_pagd
Apps.Fib.Interaction.player.add_gold (amount: U120) : Apps.Fib.Interaction Unit {
  do Apps.Fib.Interaction {
    let func  = (player: Apps.Fib.Player) => Apps.Fib.Player.gd.change player ((x : U120) => U120.add x amount)
    Apps.Fib.Interaction.player.mut func
    ask pos   = Apps.Fib.Interaction.player.get_pos
    let event = Apps.Fib.Event.gold_add pos amount
    Apps.Fib.Interaction.event.add event
    return Unit.new
  }
}