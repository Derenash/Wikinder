Apps.Fib.Interaction.player.add_root_at (amount: U120) (pos: Apps.Fib.Pos) : Apps.Fib.Interaction Unit {
  do Apps.Fib.Interaction {
    let func  = (player: Apps.Fib.Player) => Apps.Fib.Player.rt.change player ((x : U120) => U120.max x amount)
    ask Apps.Fib.Interaction.player.mut func
    let event = Apps.Fib.Event.rt_add (Sigma.fst pos) amount
    ask Apps.Fib.Interaction.event.add event
    return Unit.new
  }
}
